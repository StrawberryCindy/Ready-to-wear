/**index.wxss**/
page{
  height: 100vh;
  overflow: hidden;
}
.userinfo {
  width: 100%;
  height: 250rpx;
  box-shadow: 2px 2px 1px #b4a9b4;
  background: #f5eaf8;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  box-shadow: 2px 2px 1px #dbd9db;
}

.userinfo-nickname {
  display: inline;
  position: relative;
  color: #aaa;
  margin-left: 50rpx;
  top: -50rpx;
  overflow: hidden;
}
.bottom-bg{
  z-index: -2;
  width: 100%;
  top: 180rpx;
  position: absolute;
}
.nav-block {
  width: 100%;
  top: 270rpx;
  position: absolute;
}
.navigation{
  height: 200rpx;
  width: 80%;
  text-align: center;
  line-height: 190rpx;
  margin: 50rpx 10%;
  border-radius: 30rpx;
  font-size: 35rpx;
  color: #e2a1a1;
  display: flex;
  flex-direction: row;
  box-shadow:2px 2px 2px #aaaaaa;
}