/* pages/wear/wear.wxss */
.info {
  position: absolute; top: 10rpx; right: 20rpx; width: 45rpx; height: 45rpx;
  border-radius: 50%;
  background: pink;
  z-index:1;
}

.weather{
  margin-top: 40rpx;
  line-height: 55rpx;
  border: solid black 1rpx;
}


.cloth{
  margin: 40rpx 50rpx 20rpx 50rpx;
  padding:  0 10rpx;
  line-height: 70rpx;
}

.cloth-card{ margin: 0rpx -50rpx; width: 700rpx; white-space: nowrap;}


/* 滑动区域 */
.swiper-item{ width: 550rpx; text-align: center;  margin:30rpx 75rpx; padding: 5rpx;}
.boxItem{ display: flex; text-align: center;  vertical-align: center; justify-content: center; align-items: center; width: 100%;  height: 100%;  padding: 0rpx; overflow-wrap: break-word; word-wrap: break-word; }

/* 翻转区域 */
.flipGroup{ width: 100%; perspective: 3500rpx;}
.flipBox{ width: 100%; backface-visibility: visible; transition: all 1s ease; transform-style: preserve-3d; }
.sideWrap{ width: 100%; height:100%; position: absolute; left: 0; top: 0; border-radius: 10rpx; overflow: hidden; }
.sideWrap.front{ background:#fff; border-radius: 15rpx;}
.sideWrap.back{ backface-visibility: visible; transform:rotateY(180deg); background: #fff; border-radius: 15rpx;}
.flipGroup.on .flipBox{ transform:rotateY(-180deg); }  


/* 搭配展示正面卡片 */
.frontGroup{ 
  width: 100%; text-align:left; border-radius: 15rpx; overflow: hidden; background-color: lightgray; height: 100%; overflow:hidden;
}
.label {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: cornsilk;
  border-radius: 43%;
  padding: 15rpx 0;
  font-size: 30rpx;
  color: grey;
  letter-spacing: 5rpx;
  writing-mode: vertical-rl;
}
.upper-wear2 { margin: 3vh 5rpx 1vh; display: flex; width: 305rpx; height: 280rpx; }
.down-wear { display: flex; margin: -12vh -305rpx 1vh; width: 310rpx; height: 390rpx; }
.outer-wear { width:305rpx; margin: 0vh 70rpx 0vh; display: flex; width: 305rpx; height: 280rpx; }
  
/* backGroup */
.backGroup{ text-align: left; font-size: 28rpx;  background: #ccc; height: 100%; }

