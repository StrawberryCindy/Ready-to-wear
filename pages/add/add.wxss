/* pages/add/add.wxss */
page {
  height: 100%;
  background: #f0daf1;
}
.block {
  margin: 30rpx 100rpx;
  height: 100rpx;
}
.select-wrap {
  width: 300rpx;
  margin: 20rpx 50rpx;
  display: inline-block;
}
.select-name {
  height: 100%;
  font-size: 35rpx;
  text-align: center;
  line-height: 100rpx;
  float: left;
}
.selected {
  margin-top: 50%;
  width: 300rpx;
}

/*颜色选择条*/ 
.color-picker{
  height: 100rpx;
  width: 380rpx;
  margin: 20rpx;
  display: inline-block;
  white-space: nowrap;
}
.color-pick {
  display: inline-block;
  box-shadow:  0 0 7rpx 2rpx red;
  padding: 4rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.color-other {
  display: inline-block;
  padding: 4rpx;
  margin: 10rpx;
}
.color-point {
  width:20px; height:20px; 
  border-radius:50%; 
  margin:2rpx;
  box-shadow: 0 0 8rpx #aaa;
}
/*预览框*/
.show-block { margin: 30rpx 100rpx;  height: 350rpx;}
.show-image { width: 305rpx; height: 305rpx;}
.image-default {
  text-align: center;
  border: solid grey 1rpx; box-shadow:1px 1px 3px #aaaaaa;
  padding: 125rpx 0;
  margin: 30rpx 120rpx ;
  font-size: 28rpx;
  line-height: 40rpx;
  color: grey;
}
