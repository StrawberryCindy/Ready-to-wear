/* pages/bodyColor/bodyColor.wxss */
page{
  background: #f5eaf8;
}
.title {
  text-align: center;
  font-size: 35rpx;
  padding: 20rpx 20rpx 0;
  width: 60%;
  margin-left: 20%;
  border-radius: 50%;
}
/* 答题区域 */
.requires{ 
  margin: 0rpx;
  height: auto;
  padding: 30rpx;
  margin: 50rpx;
  border:1px solid #BFBFBF;
  box-shadow:2px 2px 3px #aaaaaa;
  background: white;
}
.require {
  width: auto;
  margin: 0 10rpx 80rpx 10rpx;
  font-size: 30rpx;
  color: rgb(92, 92, 92);
}
.rq-title{
  font-size: 33rpx;
  line-height: 55rpx;
}

.ans{
  margin: 20rpx 0 ;
  display: flex;
  flex-direction: row;
}
.btn-default {
  padding: 20rpx;
  width: 50%;
  border: 1rpx rgb(206, 206, 206) solid;
  border-radius: 5rpx;
}

.btn-active {
  padding: 20rpx;
  width: 50%;
  background: #f5eaf8;
  border: 1rpx rgb(206, 206, 206) solid;
  border-radius: 5rpx;
}

.submit-btn{
  margin-bottom: 40rpx;
}


/*使屏幕变暗 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 2;
  }
  /*对话框 */
.commodity_attr_box {
  height: 80%;
  width: 98%;
  margin-left: 1%;
  overflow: hidden;
  position: fixed;
  bottom: 3rpx;
  left: 0;
  z-index: 3;
}

  /*弹窗内部样式*/
  .modal{
    text-align: left;
    height: 100%;
    overflow-y: scroll;   
    background: #fcfae0;
    border-radius: 20rpx;
    margin-bottom: 5rpx;
  }
  
  .close{
    position: absolute;
    font-size: x-large;
    top: 0;
    right: 20rpx;
  }

  .report-pic {
    margin: 5%;
    width: 90%;
    display: flex;
    flex-direction: row;
    font-size: 25rpx;
    text-align: center;
  }
  .report-pic-block {
    width: 33%;
    height: 24vh;
  }
  .pic-default {
    border-bottom: 5rpx #fdfce5 solid;
  }
  .pic-active{
    border-bottom: 5rpx rgb(43, 122, 226) solid;
    border-radius: 5rpx;
  }
  .report-title {
    font-size: 33rpx;
    margin: 50rpx;
  }
  .cloud {
    z-index: 1; 
    position: absolute;
    width: 150rpx;
  }
  .report-cloth-tip {
    font-size: 28rpx;
    margin: 40rpx;
  }
  .report-lip-tip {
    font-size: 28rpx;
    margin: 40rpx;
  }