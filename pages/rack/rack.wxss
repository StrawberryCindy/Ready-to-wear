/* pages/rack/rack.wxss */
page{
  height: 100vh;
  overflow: hidden;
  width: 100%;
}
.title{
  width: 100%;
  background-color: #f5eaf8;
  font-size: 30rpx;
}
.scroll-y{
  position: absolute;
  margin-top: 0;
}

/* 选择不同分类标准 */
.choose-type { display: flex; flex-direction: row; line-height: 54rpx; font-size: 27rpx; background:#f5eaf8; text-align: center; padding: 4rpx 10% 0 10%;}
.type-active { background: white; border-top-left-radius: 20rpx; border-top-right-radius: 20rpx; width: 50%;}
.type-default {  width: 50%; }

.kind-title {
  border-left: #ff91a2 4px solid;
  padding-left: 20rpx;
}

.cloth{
  margin: 20rpx 20rpx;
  width: auto;
  padding: 30rpx 50rpx;
  display: block;
  overflow: hidden;
  font-size: 32rpx;
}

.cloth-design{
  display: inline-block;
  width: 100%;
  white-space: nowrap;
}

.cloth-icon{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
}


/*使屏幕变暗 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 2;
  }
  /*对话框 */
.commodity_attr_box {
  height: 200rpx;
  width: 98%;
  margin-left: 1%;
  overflow: hidden;
  position: fixed;
  bottom: 3rpx;
  left: 0;
  z-index: 3;
}

  /*弹窗内部样式*/
  .modal{
    text-align: center;
    line-height: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 20rpx;
    margin-bottom: 5rpx;
  }
